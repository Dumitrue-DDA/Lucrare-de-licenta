@using System.Security.Claims
@using Adventour.Data
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Adven-tour</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lucrare_de_licenta.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand order-1 align-items-center d-inline-flex"
                   asp-area="" asp-page="/Index">
                    <img class="px-2" id ="logo" src="~/Resources/Logo.png" />
                    <span class="fs-3" style="font-family: Quicksand">Adven-tour</span>
                </a> 
                <button class="navbar-toggler order-2" type="button" data-bs-toggle="collapse"
                             data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                             aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                    
                <partial name="Shared/Partials/_LoginPartial" />

                <div class="navbar-collapse order-3 collapse d-sm-inline-flex justify-content-between">
                    <ul class="main-nav navbar-nav flex-grow-1 gap-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown">
                                Tururi
                            </a>
                            @await Component.InvokeAsync("TurDropdown")
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown">
                                Destinatii
                            </a>
                            @await Component.InvokeAsync("DestDropdown")
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/">Despre noi</a>
                        </li>
                    </ul>                
                </div>
            </div>
        </nav>
    </header>
    <div class="mx-2 mx-xl-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer id="site_footer" class="border-top p-4 mt-3">
        <div id="footer_container" class="container">
            <div id="socials-container">
                <a class="social-link" target="_blank" href="https://github.com/Dumitrue-DDA/Lucrare-de-licenta">
                    <img src="~/Resources/Icons/github.svg" />
                </a>
                <a class="social-link" target="_blank" href="https://www.linkedin.com/in/dumitru-andrei-despina">
                    <img src="~/Resources/Icons/linkedin.svg" />
                </a>
                <a class="social-link" target="_blank" href="https://wa.me/40737631851">
                    <img src="~/Resources/Icons/whatsapp.svg" />
                </a>
                <a class="social-link dummy-link" target="_blank" aria-disabled="true" href="">
                    <img src="~/Resources/Icons/facebook.svg" />
                </a>
                <a class="social-link dummy-link" target="_blank" aria-disabled="true" href="">
                    <img src="~/Resources/Icons/instagram.svg" />
                </a>
            </div>
            <p class="mt-2">
                &copy; 2025 Adven-Tour SRL
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>