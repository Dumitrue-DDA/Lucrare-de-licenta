@page
@model Lucrare_de_licenta.Pages.Identity.Account.LogoutModel
@{
    ViewData["Title"] = "Deconectare";
}

<div class="d-flex flex-column align-items-center my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" 
            asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-link ">Deconecteaza-ma</button>
            </form>
        }
        else
        {
            <p class="text-success">A-ti fost deconectat cu succes.</p>
            <a class="btn btn-primary" href="/">Inapoi la pagina principala</a>
        }
    }
</div>
