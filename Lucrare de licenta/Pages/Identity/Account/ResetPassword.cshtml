@page
@model Lucrare_de_licenta.Pages.Identity.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Resetare Parola";
}
<h1 class="mt-2 text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center my-4">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Input.Email" type="hidden" />
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control"
                        autocomplete="new-password" placeholder="Parola" />
                    <label asp-for="Input.Password">Parola noua</label>
                    <span asp-asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control"
                           autocomplete="new-password" placeholder="Parola" />
                    <label asp-for="Input.ConfirmPassword">Confirma parola</label>
                    <span asp-asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mx-5 mb-3">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">
                        Reseteaza
                    </button>
                </div>
            </form>
        </section>
    </div>
</div>